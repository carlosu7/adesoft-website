import datetime
import time
import calendar

class tiempoMexico:
	
	def __init__(self):
		self.ano = ""
		self.mes = ""
		self.dia = ""
		self.hora = ""
		self.minuto = ""

	def parseTime(self):
		utcTime = datetime.datetime.now()
		mexTime = str( utcTime + datetime.timedelta(hours=-5) )
		array = []
		cadena = ""
		j = 0
		for i in range(0, len(mexTime)):

			if (i >= 0 and i <= 3) or (i >= 5  and i<= 6) or (i >= 8 and i<= 9) or (i >= 11 and i<= 12) or (i >= 14 and i<= 15):
				cadena = cadena + mexTime[i]

			if mexTime[i] == "-" or mexTime[i] == " " or mexTime[i] == ":":
				array.insert(j, cadena)
				cadena = ""
				j = j + 1
		return array

	def getAno(self):
		array = self.parseTime()
		return array[0]
		
